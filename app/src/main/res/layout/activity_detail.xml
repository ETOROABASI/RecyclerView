<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.android.recyclerview.ui.DetailActivity">
    <ImageView
        android:id="@+id/im_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_filter_vintage_black_36dp"
        android:transitionName="@string/transition_image"
        android:tint="@color/colorAccent"
        />


    <TextView
        android:id="@+id/quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/im_detail_image"
        android:transitionName="@string/transition_quote"/>

    <TextView
        android:id="@+id/quote_attribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_text"
        android:fontFamily="san-serif-light"
        android:textStyle="italic"
        android:transitionName="@string/transition_attribution" />
</RelativeLayout>
